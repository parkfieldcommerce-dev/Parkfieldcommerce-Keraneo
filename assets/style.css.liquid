@charset "UTF-8";

/*! Begin common style css */
.full-page-width { width: 100%; }
.mobile-hide { display: block; }
.desktop-hide { display: none; }
.ipad-show { display: none; }
.desktop-show { display: block; }
.col-half { width: 50%; }
.banner__media { background: transparent; }

@media (max-width: 1023px) { 
  .ipad-show { display: block; }
  .desktop-show { display: none; }
}
@media (max-width: 768px) { 
  .mobile-hide { display: none; } 
  .desktop-hide { display: block; } 
}
@font-face {
  font-family: "Segoe UI Historic";
  src: url({{ 'seguiemj.woff' | asset_url }}) format("woff");
}

@font-face {
  font-family: "Sofia Pro";
  src: url({{ 'sofiapro-light.otf' | asset_url }}) format('opentype');
}

.page-main-content { width: 1100px; padding: 50px; }
@media (max-width: 1200px) { 
  .page-main-content { width: 100%; padding: 50px; }
}
@media (max-width: 749px) { 
  .page-main-content { padding: 27px 15px; }
}
.shopify-page-section { margin-bottom: 103px; }

a.btn { 
  font-family: "Archivo Narrow";
  font-size: 22px;
  text-transform: uppercase;
  font-weight: 700;
  padding: 15px 16px;
  text-decoration: none;
}
.image-banner a.button:hover:after { 
  box-shadow: none;
}
/*! End common style css */
h2.section-heading {
  font-family: "Archivo Narrow";
  font-size: 42px;
  text-transform: uppercase;
  font-weight: 700;
  line-height: 61px;
  margin: 26px 0px;
  text-align: center;
}
@media (max-width: 768px) { 
  a.btn { font-size: 18px !important; padding: 15px !important; }
  .shopify-page-section { margin-bottom: 51px; }
  h2.section-heading { font-size: 35px; margin: 35px 0; line-height: 40px;  }
}
@media (max-width: 425px) { 
  a.btn { display: flex; justify-content: center; }
}
/*! Begin header style css */
@media (min-width: 1700px) {
  .header-main-width { max-width: 1685px !important; margin: 0 auto !important; }
}
@media (min-width: 1440px) {
  header.header { padding: 20px 0px 20px; }
}
@media (min-width: 1024px) {
  .header__heading-link { margin-left: -21.75rem; }
}
#shopify-section-header sticky-header.header-wrapper header .header__menu-item span { text-decoration: none; }
#shopify-section-header sticky-header.header-wrapper header .header__menu-item span.header__active-menu-item { text-decoration: underline #191816 3px; text-underline-offset: 8px; }
#shopify-section-header sticky-header.header-wrapper header a.header__menu-item:hover { text-decoration: none; }
#shopify-section-header sticky-header.header-wrapper header .header__menu-item span:hover
{ text-underline-offset: 8px; text-decoration: underline #191816 3px; }
#shopify-section-header sticky-header.header-wrapper header { display: flex; justify-content: space-between; }
#shopify-section-header sticky-header.header-wrapper header ul.list-menu li a.header__menu-item { 
  font-family: "Archivo Narrow";
  font-weight: 100;
  font-size: 17px;
  line-height: 24px;
  text-transform: uppercase;
  color: #191816;
  letter-spacing: 0px;
}
#shopify-section-header .header__icons svg { width: 23px; }
#shopify-section-header .header__active-menu-item { text-decoration: underline #191816 3px; }
@media (max-width: 768px) {
  #shopify-section-header sticky-header.header-wrapper header .header__heading { width: 125px; margin-left: 32px; }
}
/*! End header style css */

/* Begin Footer Custom Style CSS */
footer .grid--4-col-tablet .grid__item:nth-child(2) .list-unstyled  { 
  padding-left: 200px;
}
footer .grid--4-col-tablet .grid__item:nth-child(3) .list-unstyled  { 
  padding-left: 100px;
}
@media (max-width: 1024px) {
  footer .grid--4-col-tablet .grid__item:nth-child(2) .list-unstyled  { 
    padding-left: 0px;
  }
  footer .grid--4-col-tablet .grid__item:nth-child(3) .list-unstyled  { 
    padding-left: 0px;
  }
}
.footer__content-bottom { display: none; }
footer.footer ul.footer-block__details-content li a{ 
    font-family: "Archivo Narrow";
    font-size: 17px;
    font-weight: "Regular"; 
    line-height: 24px;
    letter-spacing: 0px;
    text-transform: uppercase;
    text-decoration: none;
    color: rgb(255, 255, 255);
}
/* End Footer Custom Style CSS */