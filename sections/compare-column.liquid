<div class="compare-column page-width shopify-page-section">
    <h2 class="section-heading">{{ section.settings.title }}</h2>
    <div class="compare-image-group">
        {% for block in section.blocks %}
            <figure class="cd-image-container">
                {% if block.settings.after_image != blank %}
                    <img src="{{ block.settings.after_image | image_url: width: 700 }}" alt="Modified Image">
                {% else %}
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
                <span class="cd-image-label" data-type="modified"></span>
                <div class="cd-resize-img"> <!-- the resizable image on top -->
                    {% if block.settings.before_image != blank %}
                        <img src="{{ block.settings.before_image | image_url: width: 700 }}" alt="Original Image">
                    {% else %}
                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                    {% endif %}
                    <span class="cd-image-label" data-type="original"></span>
                </div>
                <span class="cd-handle"></span>
            </figure>
        {% endfor %}
    </div>
</div>


{% schema %}
{
    "name": "Compare Column",
    "class": "section",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "default": "COMPARE COLUMN TITLE",
            "label": "Title"
        }
    ],
    "blocks": [
        {
            "name": "Compare Column Item",
            "type": "clumn",
            "limit": 3,
            "settings": [
                {
                    "type": "image_picker",
                    "id": "before_image",
                    "label": "Before Image"
                },
                {
                    "type": "image_picker",
                    "id": "after_image",
                    "label": "After Image"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Compare Column"
        }
    ]
}
{% endschema %}