<div class="timeline-section page-width shopify-page-section">
    <h2 class="section-heading">{{ section.settings.heading }}</h2>
    <!-- The Timeline -->
    <ul class="timeline">
        {% for block in section.blocks %}
            <!-- Item 1 -->
            <li>
                {% assign modulo = forloop.index | modulo: 2 %}
                <div class="{% if modulo == 1 %}direction-r{% else %}direction-l{% endif %}">
                    <div class="flag-wrapper">
                        <span class="flag wbg">{{ block.settings.title }}</span>
                    </div>
                    <div class="desc">{{ block.settings.description }}</div>
                </div>
            </li>
        {% endfor %}
    </ul>
</div>

{% schema %}
{
  "name": "Timeline",
  "tag": "section",
  "class": "section",
  "settings": [
    {
        "type": "text",
        "id": "heading",
        "label": "Heading"
    }
  ],
  "blocks": [
    {
        "type": "column",
        "name": "t:sections.multicolumn.blocks.column.name",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Title"
            },
            {
                "type": "textarea",
                "id": "description",
                "label": "Text"
            }
        ]
    }
  ],
  "presets": [
    {
      "name": "Timeline"
    }
  ]
}
{% endschema %}