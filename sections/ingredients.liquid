<div class="ingredients page-width shopify-page-section">
    <h2 class="section-heading">{{ section.settings.heading }}</h2>
    <div class="timeline-section">
        {% for block in section.blocks %}
            <div class="row my-3 timeline-point flex-sm-row-reverse">
                <div class="col-sm-6 timeline-point-text">
                    <h3 class="title">{{ block.settings.title }}</h3>
                    <p>{{ block.settings.description }}</p>
                </div>
                <div class="col-sm-6 timeline-point-image">
                {% if block.settings.image != blank %}
                    <img src="{{ block.settings.image | image_url: width: 500 }}">
                {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
</div>

{% schema %}
{
  "name": "Ingredients",
  "tag": "section",
  "class": "section",
  "settings": [
    {
        "type": "text",
        "id": "heading",
        "label": "Heading"
    }
  ],
  "blocks": [
    {
        "type": "column",
        "name": "t:sections.multicolumn.blocks.column.name",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Slide Image"
            },
            {
                "type": "text",
                "id": "title",
                "label": "Title"
            },
            {
                "type": "textarea",
                "id": "description",
                "label": "Text"
            }
        ]
    }
  ],
  "presets": [
    {
      "name": "Ingredients"
    }
  ]
}
{% endschema %}