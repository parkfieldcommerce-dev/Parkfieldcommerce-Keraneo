                                {%- if section.settings.right_cover_image.width >= 3000 -%}{{ section.settings.right_cover_image | image_url: width: 3000 }} 3000w,{%- endif -%}
                                {%- if section.settings.right_cover_image.width >= 3840 -%}{{ section.settings.right_cover_image | image_url: width: 3840 }} 3840w,{%- endif -%}
                                {{ section.settings.right_cover_image | image_url }} {{ section.settings.right_cover_image.width }}w"
                            src="{{ section.settings.right_cover_image | image_url: width: 1920 }}"
                            sizes="{% if section.settings.full_width %}100vw{% else %}(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 }}px, (min-width: 750px) calc(100vw - 10rem), 100vw{% endif %}"
                            alt="{{ 'sections.video.load_video' | t: description: section.settings.description | escape }}"
                            loading="lazy"
