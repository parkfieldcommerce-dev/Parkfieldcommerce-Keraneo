                            {%- if section.settings.right_cover_image.width >= 3840 -%}{{ section.settings.right_cover_image | image_url: width: 3840 }} 3840w,{%- endif -%}
                            {{ section.settings.right_cover_image | image_url }} {{ section.settings.right_cover_image.width }}w"
