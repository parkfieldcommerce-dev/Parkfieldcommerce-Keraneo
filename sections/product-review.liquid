<div class="page-width">
    <h2 class="section-heading">{{ section.settings.heading }}</h2>
    <div class="review-content">
        <span class="shopify-product-reviews-badge" data-id="{{ product.id }}"></span>
    </div>
    {% if section.settings.button_link != blank %}
    <div class="product-review-button">
        <div class="client-photos">
            <p>{{ section.settings.client_photo_label }}</p>
            {%  if section.settings.client_photo != blank %}
                <img src="{{ section.settings.client_photo | image_url: width: 300 }}">
            {% endif %}
        </div>
        <a class="btn" href="{{ section.settings.button_link }}">{{ section.settings.button_label }}</a>
    </div>
{% endif %}
</div>

{% schema %}
{
    "name": "Product Review",
    "tag": "section",
    "class": "product-review-section",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "text",
            "id": "button_label",
            "label": "Button Label"
        },
        {
            "type": "url",
            "id": "button_link",
            "label": "Button Link"
        },
        {
            "type": "text",
            "id": "client_photo_label",
            "label": "Client Photo Lable"
        },
        {
            "type": "image_picker",
            "id": "client_photo",
            "label": "Client Photo"
        }
    ],
    "presets": [
        {
        "name": "Product Review"
        }
    ]
}
{% endschema %}