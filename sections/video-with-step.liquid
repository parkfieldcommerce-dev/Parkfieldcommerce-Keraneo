            </div>
        </div>
        <div class="step-content">
            {% for block in section.blocks %}
                <div class="step">
                    <h2 class="title">{{ block.settings.title }}</h2>
                    <p>{{ block.settings.description }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
