{% schema %}
{
  "name": "Video With Step",
  "tag": "section",
  "class": "video-with-step",
  "settings": [
    {
        "type": "text",
        "id": "heading",
        "label": "Heading"
    },
    {
      "type": "image_picker",
      "id": "cover_image",
      "label": "t:sections.video.settings.cover_image.label"
    },
    {
      "type": "image_picker",
      "id": "cover_mob_image",
      "label": "Mobile Image"
    },
    {
      "type": "video_url",
      "id": "video_url",
      "accept": [
        "youtube",
        "vimeo"
      ],
      "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc",
      "label": "t:sections.video.settings.video_url.label",
      "placeholder": "t:sections.video.settings.video_url.placeholder",
      "info": "t:sections.video.settings.video_url.info"
    }
  ],
  "blocks": [
    {
        "type": "Step",
        "name": "Step",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Title"
            },
            {
                "type": "textarea",
                "id": "description",
                "label": "Description"
            }
        ]
    }
  ],
  "presets": [
    {
      "name": "Video With Step"
    }
  ]
}
{% endschema %}
