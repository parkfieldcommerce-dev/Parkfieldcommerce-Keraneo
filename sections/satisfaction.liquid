<div class="full-width shopify-page-section">
    <div class="section-content page-width">
        {% if section.settings.heading != blank %}
            <h2 class="heading">{{ section.settings.heading }}</h2>
            <p class="subheading">{{ section.settings.subheading }}</p>
        {% endif %}
        {% if section.settings.content != blank %}
            <div class="content"><p>{{ section.settings.content }}</p></div>
        {% endif %}
        <div class="block-list">
            {% for block in section.blocks %}
                <div class="item">
                    {% if block.settings.icon != blank %}
                        <div class="icon" >
                            <img src="{{ block.settings.icon | image_url: width: 500 }}">
                        </div>
                    {% endif %}
                    <p>{{ block.settings.text }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

{% schema %}
{
    "name": "Satisfaction",
    "tag": "section",
    "class": "satisfaction-section",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "text",
            "id": "subheading",
            "label": "Subheading"
        },
        {
            "type": "textarea",
            "id": "content",
            "label": "Content"
        }
    ],
    "blocks": [
        {
            "type": "Item",
            "name": "Icon",
            "limit": 3,
            "settings": [
                {
                    "type": "image_picker",
                    "id": "icon",
                    "label": "Image"
                },
                {
                    "type": "text",
                    "id": "text",
                    "label": "Text"
                }
            ]
        }
    ],
    "presets": [
        {
        "name": "Satisfaction"
        }
    ]
}
{% endschema %}