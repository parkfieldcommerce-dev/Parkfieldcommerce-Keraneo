<div class="discover full-width">
    <div class="page-content page-width">
        {% if section.settings.icon != blank %}
            <img src="{{ section.settings.icon | image_url: width: 60 }}">
        {% endif %}
        <div class="text-box">
            <span class="subtitle">{{ section.settings.subtitle }}</span>
            <h3 class="heading">{{ section.settings.heading }}</h3>
            <a href="{{ section.settings.button_link }}" class="button_link">{{ section.settings.button_label }}</a>
        </div>
    </div>
</div>

{% schema %}
{
  "name": "Discover",
  "tag": "section",
  "class": "section",
  "settings": [
    {
        "type": "image_picker",
        "id": "icon",
        "label": "Icon"
    },
    {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle"
    },
    {
        "type": "text",
        "id": "heading",
        "label": "Heading"
    },
    {
        "type": "text",
        "id": "button_label",
        "label": "Button Lavel"
    },
    {
        "type": "text",
        "id": "button_link",
        "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Discover"
    }
  ]
}
{% endschema %}